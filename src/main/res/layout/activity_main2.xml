<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/vote2"
    tools:context=".MainActivity2">

    <EditText
        android:id="@+id/tf1"
        android:layout_width="414dp"
        android:layout_height="64dp"
        android:layout_marginTop="140dp"
        android:background="@drawable/gradient"
        android:ems="10"
        android:hint=" NAME"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFEB3B"
        android:textColorLink="#E80202"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/tf2"
        android:layout_width="415dp"
        android:layout_height="57dp"
        android:layout_marginTop="52dp"
        android:background="@drawable/gradient"
        android:ems="10"
        android:hint=" MOBILE NO"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFEB3B"
        android:textColorLink="#C8B720"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tf1" />

    <EditText
        android:id="@+id/tf3"
        android:layout_width="411dp"
        android:layout_height="53dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/gradient"
        android:ems="10"
        android:hint="EMAIL"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFEB3B"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tf2" />

    <EditText
        android:id="@+id/tf4"
        android:layout_width="402dp"
        android:layout_height="54dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/gradient"
        android:ems="10"
        android:gravity="center|center_horizontal"
        android:hint="PASSWORD"
        android:inputType="textPassword"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#FFEB3B"
        android:textColorHint="#FFEB3B"
        android:textColorLink="#FFEB3B"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tf3" />

    <Button
        android:id="@+id/button4"
        android:layout_width="142dp"
        android:layout_height="63dp"
        android:layout_marginTop="56dp"
        android:background="@drawable/activity1"
        android:text="SIGNUP"
        android:textColor="#E8D95A"
        android:textColorHint="#CDDC39"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.539"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tf4" />

    <ProgressBar
        android:id="@+id/progressBar2"
        style="?android:attr/progressBarStyle"
        android:layout_width="73dp"
        android:layout_height="42dp"
        android:layout_marginBottom="52dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.529"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>